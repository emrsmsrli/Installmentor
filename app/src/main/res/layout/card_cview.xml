<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#aaddff"
    app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/bank_name"
        android:textColor="@android:color/black"
        android:text="BANÅžKNAME"
        android:fontFamily="serif"
        android:textSize="@dimen/card_view_bank_name_text_size"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/card_view_startend_extra_margin"
        android:layout_marginTop="@dimen/card_view_bank_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/card_number"
        android:textColor="@android:color/black"
        android:textSize="@dimen/card_view_card_number_text_size"
        android:layout_marginStart="@dimen/card_view_startend_margin"
        android:layout_marginTop="@dimen/card_view_topbottom_margin"
        android:layout_gravity="center_vertical"
        android:text="5236 5264 5125 6264"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/holder_name"
        android:textColor="@android:color/black"
        android:text="Emre Simsirli"
        android:layout_marginStart="@dimen/card_view_startend_margin"
        android:layout_marginBottom="@dimen/card_view_topbottom_margin"
        android:textSize="@dimen/card_view_holder_name_text_size"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/card_type"
        android:src="@mipmap/visalogo"
        android:contentDescription="@string/credit_card_imgview_desc"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/card_view_card_type_margin"
        android:layout_marginBottom="@dimen/card_view_card_type_margin"
        android:layout_width="75dp"
        android:layout_height="52dp" />

</android.support.v7.widget.CardView>